<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ed3f3f"
    android:orientation="horizontal">
<RelativeLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/home_search_shape"

    android:layout_marginLeft="10dp"
    android:layout_weight="1"
    android:padding="5dp">
    <TextView
        android:id="@+id/tv_search_home"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:drawableLeft="@drawable/home_icon_search"
        android:drawablePadding="10dp"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:text=" 输入搜索信息"
        android:textSize="13sp" />
    <EditText
        android:id="@+id/et_search_home"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:background="@drawable/home_search_shape"
        android:drawableLeft="@drawable/home_icon_search"
        android:drawablePadding="10dp"
        android:maxLines="1"
        android:textSize="13sp"
        android:visibility="gone"/>
</RelativeLayout>


    <TextView
        android:id="@+id/tv_message_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:drawableTop="@drawable/home_new_message_icon"
        android:text=" 消息"
        android:textColor="#fff" />
</LinearLayout>
